<contenttype>
  <config name="MyContentType" version="1.0">
    <form>
      <title name="myTitle"/>
      <block name="TestBlock1">
        <input name="myTitle" required="true" type="text">
          <display>My title</display>
          <xpath>contentdata/mytitle</xpath>
        </input>
        <input name="myCheckbox" type="checkbox">
          <display>My checkbox</display>
          <xpath>contentdata/mycheckbox</xpath>
        </input>
        <input name="myDate" type="date">
          <display>My date</display>
          <xpath>contentdata/mydate</xpath>
        </input>
        <input name="myDropdown" type="dropdown">
          <display>My dropdown</display>
          <xpath>contentdata/mydropdown</xpath>
          <options>
            <option value="o1">Option 1</option>
            <option value="o2">Option 2</option>
          </options>
        </input>
        <input name="myFile" type="file">
          <display>My file</display>
          <xpath>contentdata/myfile</xpath>
        </input>
        <input name="myFiles" type="files">
          <display>My files</display>
          <xpath>contentdata/myfiles</xpath>
        </input>
        <input name="myHtmlarea" type="htmlarea">
          <display>My htmlarea</display>
          <xpath>contentdata/myhtmlarea</xpath>
        </input>
        <input name="myImage" type="image">
          <display>My image</display>
          <xpath>contentdata/myimage</xpath>
        </input>
        <input name="myImages" type="images">
          <display>My images</display>
          <xpath>contentdata/myimages</xpath>
        </input>
        <input name="myRadiobutton" type="radiobutton">
          <display>My radiobutton</display>
          <xpath>contentdata/myradiobutton</xpath>
          <options>
            <option value="r1">Choice 1</option>
            <option value="r2">Choice 2</option>
            <option value="r3">Choice 3</option>
          </options>
        </input>
        <input multiple="false" name="mySingleRelatedcontent" type="relatedcontent">
          <display>My single related content</display>
          <xpath>contentdata/mysinglerelatedcontent</xpath>
          <contenttype name="article"/>
        </input>
        <input multiple="true" name="myMultipleRelatedcontent" type="relatedcontent">
          <display>My multiple related content</display>
          <xpath>contentdata/mymultiplerelatedcontent</xpath>
        </input>
        <input name="myText" type="text">
          <display>My text</display>
          <xpath>contentdata/mytext</xpath>
        </input>
        <input name="myTextarea" type="textarea">
          <display>My textarea</display>
          <xpath>contentdata/mytextarea</xpath>
        </input>
        <input name="myUploadfile" type="uploadfile">
          <display>My uploadfile</display>
          <xpath>contentdata/myuploadfile</xpath>
        </input>
        <input name="myUrl" type="url">
          <display>My URL</display>
          <xpath>contentdata/myurl</xpath>
        </input>
        <input name="myXml" type="xml">
          <display>My xml</display>
          <xpath>contentdata/myxml</xpath>
        </input>
      </block>
    </form>
  </config>
</contenttype>